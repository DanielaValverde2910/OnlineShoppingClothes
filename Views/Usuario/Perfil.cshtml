@model OnlineShoppingClothes.Models.Usuario

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="display-5">🌟 Perfil del Usuario 🌟</h1>
        <p class="text-muted">Revisa tu información personal y actualízala cuando lo necesites.</p>
    </div>

    <!-- Información del usuario -->
    <div class="card shadow-sm p-4">
        <h3 class="card-title text-center mb-3">👤 Información Personal</h3>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <strong>Nombre:</strong> @Model.Nombre
            </li>
            <li class="list-group-item">
                <strong>Apellido:</strong> @Model.Apellido
            </li>
            <li class="list-group-item">
                <strong>Email:</strong> @Model.Email
            </li>
        </ul>
    </div>

    <!-- Botones de acción -->
    <div class="d-flex justify-content-center gap-3 mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">🏠 Volver al Inicio</a>
        <a href="@Url.Action("Logout", "Usuario")" class="btn btn-danger btn-lg">🚪 Cerrar Sesión</a>
    </div>
</div>
