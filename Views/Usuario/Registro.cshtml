@model OnlineShoppingClothes.Models.Usuario

<h2 class="text-center my-4">Registrarse</h2>

<form asp-action="Registro" method="post" class="mx-auto" style="max-width: 500px;">
    <!-- Campo para el nombre -->
    <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre:</label>
        <input asp-for="Nombre" id="Nombre" class="form-control" required />
    </div>

    <!-- Campo para el apellido -->
    <div class="mb-3">
        <label for="Apellido" class="form-label">Apellido:</label>
        <input asp-for="Apellido" id="Apellido" class="form-control" required />
    </div>

    <!-- Campo para el email -->
    <div class="mb-3">
        <label for="Email" class="form-label">Email:</label>
        <input asp-for="Email" type="email" id="Email" class="form-control" required />
    </div>

    <!-- Campo para la contraseña -->
    <div class="mb-3">
        <label for="Password" class="form-label">Contraseña:</label>
        <input asp-for="Password" type="password" id="Password" class="form-control" required />
    </div>

    <!-- Botón para enviar el formulario -->
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg w-100">Registrarse</button>
    </div>

    <!-- Botones de acción -->
    <div class="d-flex justify-content-center gap-3 mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">🏠 Volver al Inicio</a>
    </div>
</form>
